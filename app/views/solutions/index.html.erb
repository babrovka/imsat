<div class="row">
	<%= render 'layouts/header' %>
	<%= render 'layouts/solution_slider' %>
	<div class="span4 lefttext">
		<h3>ИМСАТ: Решения</h3>
			<ul class="solutions-list">
			  <% @solutions.each do |solution| %>
			    <li><%= link_to solution.name, solution %></li> 
			<% end %>

			</ul>		
	</div>
	
	<% if @solution %>
	<div class="span8 maintext">
		<h3><%= @solution.name %></h3>
			<p><%= sanitize @solution.description %></p>	
	</div>
  <% end %>
	
	<%= render 'layouts/footer' %>
</div>
