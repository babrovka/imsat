<div class="row">
	<%= render 'layouts/header' %>
	<%= render 'layouts/solution_slider' %>
	<div class="span4 lefttext">
		<h3>ИМСАТ: Решения</h3>
			<ul class="solutions-list">
			  <% @solutions.each do |solution| %>
			    <li><%= link_to solution.name, solution %></li> 
			<% end %>

			</ul>		
	</div>
	
	<% if @solution %>
		<%= render 'shared/element', element: @solution %>
  <% end %>
	
	<%= render 'layouts/footer' %>
</div>
